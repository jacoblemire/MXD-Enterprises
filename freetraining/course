      <!-- Video 2 -->
      <div id="step2" class="hidden">
        <h2 class="text-2xl mb-2">Step 2</h2>
        <div class="aspect-w-16 aspect-h-9">
          <iframe id="video2" width="100%" height="315" src="https://www.youtube.com/embed/VIDEO_ID_2?enablejsapi=1" frameborder="0" allowfullscreen></iframe>
